<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneVerifyActivity"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/login_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="API Information"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pkeyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pkeyEt"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:background="#000000"
            android:text="Public API"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/pkeyEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/ekeyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ekeyEt"
            android:background="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Encryption API"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/ekeyEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/skeyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/skeyEt"
            android:background="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:text="Secret API"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/skeyEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="API Verification"
            android:textAllCaps="false"
            android:textColor="#FFEB3B"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>